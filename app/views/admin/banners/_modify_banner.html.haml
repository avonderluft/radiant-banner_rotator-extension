%table.index#banners
  %tbody
    %tr.node.level_1
      %td.name{:style => "text-align: center;"}
        %span.title= @banner.name
      %td{:style => "height: 150px; width: 75%; background: url(#{@banner.background_image}) center left no-repeat;"}
        - unless @banner.foreground_image.blank?
          %img{:src => @banner.foreground_image, :alt => '', :style => "position: relative; #{@banner.image_style}"}