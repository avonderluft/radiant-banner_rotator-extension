%h1= t('banner_rotator.deactivate_banner')
%p= t('banner_rotator.text.banners.deactivate_warning')

= render :partial => 'modify_banner'

- form_for [:admin, @banner], :html => {:action => :deactivate, 'data-onsubmit_status'=>"Deactivating banner&#8230;"} do
  %p.buttons
    %input.button{:type=>"submit", :value => t('banner_rotator.deactivate_banner')}/
    = t('or')
    = link_to t('cancel'), admin_banners_url
