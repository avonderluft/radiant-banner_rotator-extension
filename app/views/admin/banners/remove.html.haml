%h1= t('banner_rotator.remove_banner')

%p
  = t('banner_rotator.text.banners.remove_warning')

= render :partial => 'modify_banner'

- form_for [:admin, @banner], :html => {:method => :delete, 'data-onsubmit_status'=>"Removing banner&#8230;"} do
  %p.buttons
    %input.button{:type=>"submit", :value => t('banner_rotator.delete_banner')}/
    = t('or')
    = link_to t('cancel'), admin_banners_url